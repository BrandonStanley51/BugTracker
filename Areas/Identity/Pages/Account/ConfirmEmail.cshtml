@page
@model ConfirmEmailModel
@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Your All Set! Your Email Has Been Confirmed";
}

<h1><span class="text-success">@ViewData["Title"]</span></h1>
<br />
<div class="card">

    <div class="card-body">
        <h5 class="text-muted mb-3">@Model.StatusMessage</h5>

        <a class="btn btn-outline-warning btn-lg btn-block" asp-area="Identity" asp-page="/Account/Login"><i class="fa fa-sign-in"></i><span> SIGN IN</span></a>

    </div>
</div>
