@page
@model LoginModel

@{
    Layout = "/Views/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "Log in";
}

<h1><span class="text-success">@ViewData["Title"]</span></h1>
<div class="row">
    <div class="col">
        <section>
            <form class="text-success" id="account" method="post">
                <h4><span class="text-success">Use an account to log in.</span></h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-outline-warning">Log in</button>
                </div>
                


                <div class="row">
                    <div class="col form-group">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                        </p>

                        <p>Don't have an account? <a class="text-warning" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register</a></p>

                    </div>
               

                </div>
            </form>
                
        </section>
    </div>


    <div class="col">
        <section>
            <h4><span class="text-success">Use a Demo to log in.</span></h4>
            <hr />
            <form class="" id="account" method="post">
                <div class="form-group">
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-outline-warning btn-block m-1" name="demoEmail" value="DemoAdminEmail">Demo Admin</button>
                            <button type="submit" class="btn btn-outline-warning btn-block m-1" name="demoEmail" value="DemoPMEmail">Demo PM</button>
                            <button type="submit" class="btn btn-outline-warning btn-block m-1" name="demoEmail" value="DemoDevEmail">Demo Developer</button>
                            <button type="submit" class="btn btn-outline-warning btn-block m-1" name="demoEmail" value="DemoSubEmail">Demo Submitter</button>
                        </div>
                    </div>
                </div>
            </form>
        </section>
        <div class="col">
            <img src="/images/magnifyingGlass.png" class="ml-4 mt-3" width="125" />
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
