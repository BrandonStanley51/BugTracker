@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout))
    {
        Layout = (string)parentLayout;
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}

<div class="container-fluid">
    <div class="row">
        <div class="col-8">
            <div class="card mx-auto text-success">
                <div class="card-header">
                    <h2><span class="text-success">Manage your account</span></h2>
                    <h4><span class="text-success">Change your account settings</span></h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <partial name="_ManageNav" />
                        </div>
                        <div class="col-md-9">
                            @RenderBody()
                        </div>
                    </div>
                </div>
                <div class="card-footer">

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
