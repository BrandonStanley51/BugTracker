                        <div class="form-group">
                            <label asp-for="Input.Email" class="text-success"></label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.CompanyName" class="text-success"></label>
                            <input asp-for="Input.CompanyName" class="form-control" />
                            <span asp-validation-for="Input.CompanyName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.CompanyDescription" class="text-success"></label>
                            <input asp-for="Input.CompanyDescription" class="form-control" />
                            <span asp-validation-for="Input.CompanyDescription" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.FirstName" class="text-success"></label>
                            <input asp-for="Input.FirstName" class="form-control" />
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.LastName" class="text-success"></label>
                            <input asp-for="Input.LastName" class="form-control" />
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>

                        @*<div class="form-group">
                            <label asp-for="Input.ImageFile" class="text-success"></label>
                            <div class="custom-file">
                                <input asp-for="Input.ImageFile" type="file" class="form-control-file custom-file-input" />
                                <label class="control-label custom-file-label">Choose</label>
                            </div>
                        </div>*@

                        <div class="form-group">
                            <label asp-for="Input.Password" class="text-success"></label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.ConfirmPassword" class="text-success"></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                </div>
                <div class="card-footer">
                        <button type="submit" class="btn btn btn-outline-warning">Register</button>
                </div>
                    </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
