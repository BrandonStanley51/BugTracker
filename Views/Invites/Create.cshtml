@model BugTracker.Models.ViewModels.InviteViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-5">
            <div class="card mx-auto">
                <div class="card-header">
                    <h1><span class="text-success">Create Invite</span></h1>                    
                </div>
                    <form asp-controller="Invites" asp-action="Create">
                <div class="card-body">
                        <div class="row row-xs align-items-center mg-b-20">
                            <div class="col-md-4">
                                <label class="mg-b-0 text-success">Email</label>
                            </div>
                            <div class="col-md-8 mg-t-5 mg-md-t-0">
                                <input type="email" asp-for="Email" class="form-control" placeholder="Enter email">
                            </div>
                        </div>
                        <div class="row row-xs align-items-center mg-b-20">
                            <div class="col-md-4">
                                <label class="mg-b-0 text-success">Firstname</label>
                            </div>
                            <div class="col-md-8 mg-t-5 mg-md-t-0">
                                <input type="text" asp-for="FirstName" class="form-control" placeholder="Enter first name">
                            </div>
                        </div>
                        <div class="row row-xs align-items-center mg-b-20">
                            <div class="col-md-4">
                                <label class="mg-b-0 text-success">Lastname</label>
                            </div>
                            <div class="col-md-8 mg-t-5 mg-md-t-0">
                                <input type="text" asp-for="LastName" class="form-control" placeholder="Enter last name">
                            </div>
                        </div>
                        <div class="row row-xs align-items-center mg-b-20">
                            <div class="col-md-4">
                                <label class="mg-b-0 text-success">Select Project</label>
                            </div>
                            <div class="col-md-8 mg-t-5 mg-md-t-0">
                                <select class="form-control" asp-for="ProjectId" asp-items="Model.ProjectsList">
                                    <option value="">Select Project</option>
                                </select>
                            </div>
                        </div>
                        <div class="row row-xs align-items-center mg-b-20">
                            <div class="col-md-4">
                                <label class="mg-b-0 text-success">Message</label>
                            </div>
                            <div class="col-md-8 mg-t-5 mg-md-t-0">
                                <textarea class="form-control" asp-for="Message" multiple="multiple" style="width:375px;"></textarea>
                            </div>
                        </div>
                </div>
                    <div class="card-footer">
                        <div class="form-group row justify-content-end mb-0">
                            <div class="col-md-8 pl-md-2">
                                <input type="submit" class="btn ripple btn-outline-warning pd-x-30 mg-r-5" value="SendInvite" />
                                
                            </div>
                            <div>
                            </div>
                        </div>
                    </div>
                    </form>
                



            </div>
        </div>
        </div>
        </div>

        

      

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
