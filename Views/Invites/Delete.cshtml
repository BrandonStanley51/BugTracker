@model BugTracker.Models.Invite

@{
    ViewData["Title"] = "Delete";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-5">
            <div class="card mx-auto">
                <div class="card-header">
                    <div class="col">
                        <h1><span class="text-success">Delete Company Invite</span></h1><br />
                        <h3><span class="text-success">Are you sure you want to delete this?</span></h3>
                    </div>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.InviteDate)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.InviteDate)
                        </dd>

                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.InviteeEmail)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.InviteeEmail)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Invitee.FullName)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Invitee)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.IsValid)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.IsValid)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Company)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Company.Name)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Invitor)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Invitor.FullName)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Invitee)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Invitee.FullName)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Project)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Project.Name)
                        </dd>
                    </dl>

                </div>
                <div class="card-footer">

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-sm btn-outline-danger" />
                        <a asp-action="Index">Back to List</a>
                    </form>


                </div>
            </div>
        </div>
    </div>
</div>




