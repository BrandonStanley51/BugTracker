@model IEnumerable<BugTracker.Models.Invite>

@{
    ViewData["Title"] = "Index";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-auto">
            <div class="card mx-auto">
                <div class="card-header">
                    <h1><span class="text-success">Company Invites Index</span></h1>
                    <a class="btn btn-sm btn-outline-warning" asp-action="Create">New Invite</a>

                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.InviteDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.InviteeEmail)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.InviteeFirstName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.InviteeLastName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IsValid)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Company)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Invitor)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.Project)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.InviteDate)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.InviteeEmail)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.InviteeFirstName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.InviteeLastName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IsValid)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Company.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Invitor.FullName)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Project.Name)
                                    </td>
                                    <td>
                                        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



