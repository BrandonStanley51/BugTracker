@model BugTracker.Models.ViewModels.ProjectMembersViewModel



<div class="container-fluid">
    <div class="row">
        <div class="col-5">
            <div class="card mx-auto">
                <div class="card-header">
                    <div class="row">
                        <h1><span class=" text-success">Assign Members to Project:</span></h1>
                        <h4><span class=" text-success">@Model.Project.Name</span></h4>
                    </div>
                </div>
                <form asp-action="AssignUsers" asp-controller="Projects" method="post">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="@Model.Project.Id">
                        <input type="hidden" asp-for="@Model.Project.Name">
                        <div class="col-12">
                            <div class="form-group">
                                <label asp-for="@Model.Users" class="control-label text-success">Assign team members</label>
                                <select asp-for="@Model.SelectedUsers" class="form-control" asp-items="@Model.Users" multiple="multiple"></select>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="form-group justify-content-center">
                            <div class="col-lg-offset-2 col-lg-10">
                                <input type="submit" class="btn btn-outline-warning" value="Assign Users" />
                                @Html.ActionLink("Back to List", "MyProjects")
                            </div>
                        </div>


                    </div>
                </form>
            </div>
            <!--End Hover Rows-->
        </div>
    </div>
</div>

