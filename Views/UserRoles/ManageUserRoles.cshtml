@model IEnumerable<BugTracker.Models.ViewModels.ManageUserRolesViewModel>


    <div class="container-fluid">
        <div class="row">
            @foreach (var viewModel in Model)
            {
<div class="card col-5" style="margin:2px">
    <div class="card-body">
        <h2 class="m-t-0 h3"><b><span class="text-success">Assign Roles to @viewModel.BTUser.FullName</span></b></h2>
        <p class="text-muted font-13 m-b-30">
            This form displays the current roles assigned to the user: @viewModel.BTUser.FullName. Use the dropdown to select the roles that this user should be assigned. Once roles are selected, click "Assign Roles" to submit the form.
        </p>
        <hr />
        <form asp-controller="UserRoles" asp-action="ManageUserRoles" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@viewModel.BTUser.Id">
            <div class="col-12">
                <div class="form-group">
                    <label asp-for="@viewModel.Roles" class="control-label text-success">Roles for @viewModel.BTUser.FullName</label>
                    <select asp-for="@viewModel.SelectedRoles" class="form-control" asp-items="@viewModel.Roles" multiple="multiple"></select>
                </div>
            </div>
            <hr />
            <div class="col-12">
                <div class="form-group pull-right">
                    <input type="submit" value="Assign Roles" class="btn btn-outline-warning" />                    
                </div>
            </div>

        </form>
    </div>
</div>}
        </div>
    </div>